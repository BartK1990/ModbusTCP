<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ModbusTCP">

    <SolidColorBrush x:Key="TextsBackgroundColor">#FFA4A2A2</SolidColorBrush>
    <SolidColorBrush x:Key="WindowBackgroundColor">#FF000000</SolidColorBrush>
    <SolidColorBrush x:Key="QueryBackground">LawnGreen</SolidColorBrush>
    <SolidColorBrush x:Key="ResponseBackground">Red</SolidColorBrush>
    
    <Style x:Key="ListViewBackground" TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="{StaticResource TextsBackgroundColor}"/>
    </Style>
    
    <Style x:Key="IPBoxBackground" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource TextsBackgroundColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="TextBlockBackground" TargetType="{x:Type TextBlock}">
        <Setter Property="Background" Value="{StaticResource TextsBackgroundColor}"/>
    </Style>

    <Style x:Key="DataGridBackground" TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="{StaticResource TextsBackgroundColor}"/>
    </Style>

</ResourceDictionary>